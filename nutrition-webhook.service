[Unit]
Description=Nutrition Tracker GitHub Webhook Server
After=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/nutricount
Environment=PATH=/home/pi/nutricount/venv/bin
Environment=WEBHOOK_SECRET=your-webhook-secret-change-this
ExecStart=/home/pi/nutricount/venv/bin/python3 /home/pi/nutricount/webhook_server.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
