# Nutrition Tracker Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Flask Secret Key (REQUIRED for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Environment (development, production, testing)
FLASK_ENV=development

# Database URL (default: sqlite:///data/nutrition.db)
# For PostgreSQL: postgresql://user:password@localhost/nutrition_db
# For MySQL: mysql://user:password@localhost/nutrition_db
DATABASE_URL=sqlite:///data/nutrition.db

# =============================================================================
# RASPBERRY PI ZERO 2W SETTINGS
# =============================================================================

# Memory limit for containers (default: 300M for Pi Zero 2W)
MEMORY_LIMIT=300M

# CPU limit for containers (default: 1.0 for Pi Zero 2W)
CPU_LIMIT=1.0

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Domain name for production deployment
DOMAIN_NAME=

# SSL Certificate email for Let's Encrypt
CERTBOT_EMAIL=

# Grafana admin password
GRAFANA_PASSWORD=

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Cache timeout in seconds (default: 300)
CACHE_TIMEOUT=300

# API rate limit per minute (default: 60)
API_RATE_LIMIT=60

# Maximum file upload size in MB (default: 10)
MAX_FILE_SIZE_MB=10

# Health check timeout in seconds (default: 30)
HEALTH_CHECK_TIMEOUT=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (true/false)
DEBUG=false

# Enable auto-reload (true/false)
AUTO_RELOAD=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
